<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centro Médico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

            <nav class="navbar navbar-expand-lg navbar-light navbar-morph" style="background-color: #e3f2fd;" >
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://images.squarespace-cdn.com/content/v1/5f7dcd4af4eb6420da139724/1602108518249-ODFI4L4Y9A2W1VGHIFNP/download.png" alt="logo" width="125" height="58">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="neumorphism">
                        <ul class="navbar-nav d-flex justify-content-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (this.User.IsInRole("Administrador"))
                                {

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Profesionales" asp-action="Index">Profesionales</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Prestaciones" asp-action="Index">Prestaciones</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnos" asp-action="Index">Turnos</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Direcciones" asp-action="Index">Direcciones</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Formularios" asp-action="Index">Formularios</a>
                                    </li>
                                }
                                else if (this.User.IsInRole("Paciente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Mi cuenta</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnos" asp-action="SeleccionarPrestacion">Nuevo turno</a>
                                    </li>
                                    <li class="nav-item">

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Formularios" asp-action="Create">Realizar consulta</a>
                                    </li>
                                }
                                else if (this.User.IsInRole("Profesional"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Prestaciones" asp-action="Index">Prestaciones</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnos" asp-action="Index">Mis Turnos</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Formularios" asp-action="Index">Formularios</a>
                                    </li>
                                }
                                <li>
                                    <a class="btn btn-primary" role="button" asp-controller="Cuenta" asp-action="CerrarSesion">Cerrar Sesion</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item mr-1">
                                    <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Home" asp-action="Nosotros">Nuestra Institución</a>
                                </li>
                                <li class="nav-item mr-lg-5">

                                    <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Formularios" asp-action="Create">Realizar Consulta</a>
                                </li>
                                <li>
                                    <a class="btn btn-primary" role="button" asp-controller="Cuenta" asp-action="Registrarse">Registrarse</a> |
                                    <a class="btn btn-primary" role="button" asp-controller="Cuenta" asp-action="IniciarSesion">Iniciar Sesion</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
       
    </header>
    <div class="container container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Centro Médico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* inicio sweetalert *@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="js/sweetAlert.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    @* fin sweetalert *@



    @RenderSection("Scripts", required: false)
</body>
</html>
