@using Agenda_B.Helpers
@model Agenda_B.Models.Paciente

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="container border bg-light">
    <h6>Paciente</h6>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Nombre" />
        <input type="hidden" asp-for="Apellido" />
        <input type="hidden" asp-for="DNI" />
        <div class="row">
            <div class="col-4 form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-4 form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label asp-for="ObraSocial" class="control-label"></label>
                <select asp-for="ObraSocial" class="form-control" asp-items="Html.GetEnumSelectList<ObraSocial>()"></select>
                <span asp-validation-for="ObraSocial" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-8 form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">@Alias.VolverAlInicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
