@model Agenda_B.Models.Profesional

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Esta seguro de eliminar este Profesional?</h3>
<div class="container border bg-light">
    <div class="row">
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.Nombre): </strong> @Html.DisplayFor(model => model.NombreCompleto)</p>
        </div>
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.Email): </strong> @Html.DisplayFor(model => model.Email)</p>
        </div>
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.DNI): </strong> @Html.DisplayFor(model => model.DNI)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.Telefono): </strong> @Html.DisplayFor(model => model.Telefono)</p>
        </div>
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.PrestacionId): </strong> @Html.DisplayFor(model => model.Prestacion.Nombre)</p>
        </div>
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.Matricula): </strong> @Html.DisplayFor(model => model.Matricula)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.HoraInicio): </strong> @Html.DisplayFor(model => model.HoraInicio)</p>
        </div>
        <div class="col-4">
            <p> <strong>@Html.DisplayNameFor(model => model.HoraFin): </strong> @Html.DisplayFor(model => model.HoraFin)</p>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Regresar a Profesionales</a>
    </form>
</div>
